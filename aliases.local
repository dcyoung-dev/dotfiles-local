alias brew_update="brew update && brew outdated --greedy --verbose"
alias sft_upgrade="sudo -v && NONINTERACTIVE=1 brew upgrade --greedy && asdf plugin update ruby && asdf plugin update nodejs"
alias docked='docker run --rm -it -v ${PWD}:/rails -v ruby-bundle-cache:/bundle -p 3000:3000 ghcr.io/rails/cli'

alias pg_switch_14="brew services stop postgresql@17 && brew services start postgresql@14"
alias pg_switch_17="brew services stop postgresql@14 && brew services start postgresql@17"